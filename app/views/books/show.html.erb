<main>
  <p id="notice">Welcome! You have signed up successfully.</p>
    <div class='container px-5 px-sm-0'>
      <div class='row'>
<%= render 'books/list', book: @book, user: @user %>
        <div class='col-md-8 offset-md-1'>
          <h2>Book detail</h2>
          <table class='table'>
              <tbody>
               <% @books.each do |book| %>
               <tr>
                 <td><%= link_to user_path(book.user), target: "_blank" do %>
                     <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
                     <% end %>
                 </td>
                 <td><%= link_to book.title, book_path(book) %></td>
                 <td><%= book.opinion %></td>
                 <td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
                 <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger destroy_book_#{@book.id}" %></td>

               </tr>

               <% end %>
              </tbody>
          </table>
        </div>
      </div>
   </div>
</main>