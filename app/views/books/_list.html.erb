
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h1>User info</h1>

    </div>
    <div class="col-lg-8">
    <table class="table table-striped">
      <h1>Books</h1>
      <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
              <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
              </td>
              <td><%= book.opinion %></td>
            </tr>
          <% end %>
        </tbody>

    </table>
    </div>
  </div>
</div>

<br>
